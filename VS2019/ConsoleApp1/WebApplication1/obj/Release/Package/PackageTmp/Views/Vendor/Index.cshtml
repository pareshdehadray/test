@model IEnumerable<DataAccess.item_utilisation>

@{
    ViewBag.Title = "Index";
}

<h2>Logs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
           Log Date
        </th>
        <th>
           Acquired
        </th>
        <th>
           Unused
        </th>
        <th>
           Wasted
        </th>
        <th>
           Category
        </th>
        <th>
           Location Code
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.asof_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.acquired)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unused)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.wasted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cnf_categories.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cnf_locations.location_code)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
